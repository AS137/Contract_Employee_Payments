@model IEnumerable<Contract_Employee_Payments.Models.ContractEmployee>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a href="@Url.Action("Create", "ContractEmployees")" class="btn btn-default"><i class="fa fa-plus"></i> Create New</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HourlyRate)
            </th>
            <th>                
                Actions
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HourlyRate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ContractEmployeeId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ContractEmployeeId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ContractEmployeeId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
